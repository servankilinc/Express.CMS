@using WebUI.Areas.Admin.Models.ViewModels.Product_
@model ProductViewModel
@{
    ViewData["Title"] = "Ürünler";
}

<div class="card">
    <div class="card-header">
        <form id="form_page_filter">
            <div class="row row-gap-4">
                <div class="col-md-4 col-md-6 col-12">
                    <div class="input-group d-flex flex-nowrap">
                        <span class="input-group-text bg-lightest">
                            Ürün Grubu
                        </span>
                        <select name="ProductGroupId" asp-items="Model.ProductGroupList" class="autoInitSelect2 form-select">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-md-6 col-12">
                    <div class="input-group">
                        <span class="input-group-text bg-lightest">
                            İsim
                        </span>
                        <input name="Name" type="text" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 col-md-6 col-12">
                    <div class="input-group">
                        <span class="input-group-text bg-lightest">
                            Silinenleri Göster
                        </span>
                        <div class="input-group-text">
                            <input name="IsDeleted" type="checkbox" class="form-check-input" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-6">
                    <button onclick="InitilazeTable(this)" type="button" class="btn btn-light">
                        <span class="dynamic-content">
                            <i class="fa-solid fa-search me-2"></i>
                            Ara
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div>
            <a class="btn btn-primary my-3" asp-controller="Product" asp-action="Create">
                <i class="fa-solid fa-file-circle-plus me-2"></i>
                Yeni Ürün Ekle
            </a>
        </div>
        <table id="table_page" class="table table-hover table-striped">
            <thead class="bg-light">
                <tr>
                    @*<th>Product Group</th>*@
                    <th>Sıra</th>
                    <th>İsim</th>
                    <th>Friendly Url</th>
                    <th>Açıklama</th>
                    <th>Görsel</th>
                    <th>Oluşturma Tarihi</th>
                    <th>Son Düzenlenme Tarihi</th>
                    <th>Durum</th>
                    <th>Silinme Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts {
    <script>

        let PageTable;

        $(document).ready(function(){
            InitilazeTable();
        })

        function InitilazeTable(e) {

            PageTable = DatatableManager.Create({serverSide: true,
                tableId: 'table_page',
                path: 'Product/DatatableServerSide',
                method: 'Post',
                buttonElement: e,
                order:[[0, 'asc']],
                requestData: {
                    filter: {
                        operator: 'base',
                        logic: 'and',
                        filters: [
                            {
                                operator: 'eq',
                                field: "productGroupId",
                                value: $("select[name='ProductGroupId']").val(),
                            },
                            {
                                operator: 'contains',
                                field: "name",
                                value: $("input[name='Name']").val(),
                            },
                            {
                                operator: 'eq',
                                field: "IsDeleted",
                                value: false,
                                logic: 'or',
                                filters: [
                                    {
                                        operator: 'eq',
                                        field: "IsDeleted",
                                        value: $("input[name='IsDeleted']").val(),
                                    }
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    {data: 'priority' },
                    {data: 'name' },
                    {data: 'friendlyUrl' },
                    {
                        data: 'description',
                        render: function (data) {
                            if(data == null) return '';
                            return `<span style="cursor: pointer; overflow: hidden; max-width: 100px !important; text-wrap-mode: nowrap; text-overflow: clip;" data-bs-toggle="tooltip" data-bs-placement="top" title="${data}">
                                ${data.substr(0,40)}...
                            </span>`;
                        }
                    },
                    {
                        data: 'image',
                        render: function (data) {
                            if(data == null) return '';
                            return `<img src="${data}" alt="express-Ürünler-${data}" style="width: 50px; height: 50px; object-fit: contain;" />`;
                        }
                    },
                    {
                        data: 'createDateUtc',
                        render: function (data) {
                            if(data == null) return '';
                            return moment(data).format('DD.MM.YYYY HH:mm');
                        }
                    },
                    {
                        data: 'updateDateUtc',
                        render: function (data) {
                            if(data == null) return '';
                            return moment(data).format('DD.MM.YYYY HH:mm');
                        }
                    },
                    {
                        data: 'isDeleted',
                        render: function (data) {
                            if(data == true) return (`<span class="badge rounded-pill bg-label-danger"><i class="fa-solid fa-xmark"></i></span>`);
                            else if(data == false) return (`<span class="badge rounded-pill bg-label-success"><i class="fa-solid fa-check"></i></span>`);
                            else return ('');
                        }
                    },
                    {
                        data: 'deletedDateUtc',
                        render: function (data) {
                            if(data == null) return '';
                            return moment(data).format('DD.MM.YYYY HH:mm');
                        }
                    },
                    {
                        data: null,
                        defaultContent: '',
                        searchable: false,
                        createdCell: function (td, cellData, rowData, row, col)
                        {
                            let deleteHandleButton = rowData.isDeleted == true ?
                                UIManager.UndoDeleteButtonTable({
                                    requestUrl: 'Product/UndoDelete',
                                    requestData: {
                                        "id": rowData.id
                                    },
                                    pageTable:PageTable
                                }) :
                                UIManager.DeleteButtonTable({
                                    requestUrl: 'Product/Delete',
                                    requestData: {
                                        "id": rowData.id
                                    },
                                    pageTable:PageTable
                                });

                            DatatableManager.AppendRowButtons(td,
                                [
                                    // 1) Update Button
                                    UIManager.UpdateButtonTable({
                                        title: "Ürün Bilgilerini Düzenle",
                                        formGetterUrl: 'Product/UpdateForm',
                                        requestData: {
                                            "id": rowData.id
                                        },
                                        pageTable: PageTable
                                    }),
                                    // 2) Delete Button
                                    deleteHandleButton
                                ]
                            );

                            // Tasarım Butonu
                            let link = document.createElement("a");
                            link.href = `/Admin/Design/Update?id=${rowData.designId}&returnUrl=/Admin/Product/Index`;
                            link.className = "btn btn-sm btn-primary m-1";

                            let icon = document.createElement("i");
                            icon.className = "fa-solid fa-object-group";

                            link.appendChild(icon);
                            td.appendChild(link);

                            // Detay Bölümleri Butonu
                            let linkDetatSections = document.createElement("a");
                            linkDetatSections.href = `/Admin/Product/DetailSections?productId=${rowData.id}`;
                            linkDetatSections.className = "btn btn-sm btn-primary m-1";

                            let iconDetatSections = document.createElement("i");
                            iconDetatSections.className = "fa-solid fa-layer-group";

                            linkDetatSections.appendChild(iconDetatSections);
                            td.appendChild(linkDetatSections);
                        }
                    }
                ]
            })
        }
    </script>
}