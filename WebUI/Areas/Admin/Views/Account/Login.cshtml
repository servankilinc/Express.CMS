@using Model.Auth.Login
@model LoginRequest
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Giriş";
}

<div class="row justify-content-center position-relative">
    <img src="~/admin/assets/img/backgrounds/bg_signup.png" style="width: 100vw; height: 100vh; position:absolute;object-fit: contain;" />
    <div class="col-lg-4 mt-12">
        <div class="card">
            <div class="card-header border-bottom mb-6">
                <div class="app-brand justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="d-flex gap-2">
                        <h4 class="text-primary m-0">
                            Giriş Yap
                        </h4>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post" class="mb-6">
                    <div class="mb-6">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" autofocus />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="mb-8">
                        <div class="d-flex justify-content-between">
                            <div class="form-check mb-0">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox"/>
                                <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="mb-6">
                        <button type="submit" class="btn btn-primary d-grid w-100">Giriş Yap</button>
                    </div>
                </form>
           @*      <p class="text-center">
                    <a asp-controller="Account" asp-action="SignUp">
                        <span>Yeni Hesap Oluştur</span>
                    </a>
                </p> *@
            </div>
        </div>
    </div>
</div>