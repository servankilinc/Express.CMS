@using WebUI.Areas.Admin.Models.ViewModels.Menu_
@model MenuCreateViewModel
@{
    Layout = null;
}

<form asp-controller="Menu" asp-action="Create" method="post">
    <div class="row row-gap-4 m-2">
        <div class="col-md-6">
            <label asp-for="CreateModel.Title" class="form-label">
                Başlık
            </label>
            <input asp-for="CreateModel.Title" type="text" class="form-control" />
            <span asp-validation-for="CreateModel.Title" class="form_validation_feedback"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CreateModel.Url" class="form-label">
                Url
            </label>
            <input asp-for="CreateModel.Url" type="text" class="form-control" />
            <span asp-validation-for="CreateModel.Url" class="form_validation_feedback"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CreateModel.Description" class="form-label">
                Açıklama
            </label>
            <input asp-for="CreateModel.Description" type="text" class="form-control" />
            <span asp-validation-for="CreateModel.Description" class="form_validation_feedback"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CreateModel.Icon" class="form-label">
                İkon
            </label>
            <input asp-for="CreateModel.Icon" type="text" class="form-control" />
            <span asp-validation-for="CreateModel.Icon" class="form_validation_feedback"></span>
        </div>
    </div>
</form>
